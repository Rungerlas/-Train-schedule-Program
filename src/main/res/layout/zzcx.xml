<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc">

   <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title">
    <TextView
    	android:text="列车查询系统"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center">
    </TextView> 
   </FrameLayout>
   <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator">
    <TextView
    	android:text="站站查询" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight">
	</TextView>
	<TextView
    	android:text="列车信息" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold">
	</TextView>
    </LinearLayout>
    
   <LinearLayout
   	android:orientation="horizontal"
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent">
   	
   	
   	
   	<!-- 图片左部分 -->
       <LinearLayout
		   android:layout_width="496dp"
		   android:layout_height="fill_parent"
		   android:layout_gravity="center_vertical"
		   android:layout_marginBottom="10dip"
		   android:layout_marginLeft="15dip"
		   android:layout_marginRight="15dip"
		   android:layout_marginTop="10dip"
		   android:layout_weight="2"
		   android:background="#ffcc66"
		   android:orientation="vertical">
           <!-- 出发站 -->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dip"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="17dip"
                   android:text="出发站："
                   android:textColor="#222222"
                   android:textSize="18sp"></TextView>

               <AutoCompleteTextView
                   android:id="@+id/EditText01"
                   android:layout_width="140dip"
                   android:layout_height="40dip"
                   android:layout_marginRight="30dp"
                   android:completionThreshold="1"
                   android:hint="输入站名"
                   android:singleLine="true"
                   android:text="北京"></AutoCompleteTextView>

           </LinearLayout>
           <!-- 中转站 -->
           <!-- android:layout_marginLeft="17dip"-->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dip"
                   android:text="中转站："
                   android:textColor="#222222"
                   android:textSize="18sp"></TextView>

               <AutoCompleteTextView
                   android:id="@+id/zzcxzzz"
                   android:layout_width="100dip"
                   android:layout_height="40dip"
                   android:layout_marginTop="3dip"
                   android:completionThreshold="1"
                   android:hint="输入站名"
                   android:singleLine="true"
                   android:text="无锡"></AutoCompleteTextView>

               <CheckBox
                   android:id="@+id/zzcxzzzbt"
                   android:layout_width="35dip"
                   android:layout_height="35dip"
                   android:layout_marginRight="30dp"
                   android:textColor="#222222"></CheckBox>
           </LinearLayout>
           <!-- 终点站 -->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="17dip"
                   android:text="终点站："
                   android:textColor="#222222"
                   android:textSize="18sp"></TextView>

               <AutoCompleteTextView
                   android:id="@+id/zzcxzdz"
                   android:layout_width="140dip"
                   android:layout_height="40dip"
                   android:layout_marginRight="30dp"
                   android:completionThreshold="1"
                   android:hint="输入站名"
                   android:singleLine="true"
                   android:text="常州"></AutoCompleteTextView>
           </LinearLayout>
           <!-- 按钮部分 -->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/zzcxbt"
                   android:layout_width="60dip"
                   android:layout_height="40dip"
                   android:layout_marginTop="10dip"
                   android:text="查询"></Button>

               <Button
                   android:id="@+id/zzcxfhbt"
                   android:layout_width="60dip"
                   android:layout_height="40dip"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="10dip"
                   android:text="返回"></Button>
           </LinearLayout>
       </LinearLayout>
	   	
	   	
	   	
	   	
	   	<!--图片模块-->
   </LinearLayout>
</LinearLayout>
   	
   	
   	
   	

   	
   	